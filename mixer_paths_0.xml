  <ctl name="Sto1 ADC MIXR ADC1 Switch" value="0"/>
  <ctl name="Sto1 ADC MIXR ADC2 Switch" value="1"/>

  <!-- TODO other defaults -->

  <path name="speaker">
  </path>

  <path name="headphones">
    <ctl name="Headphone Switch" value="1"/>
  </path>

  <path name="speaker-and-headphones">
    <ctl name="Headphone Switch" value="1"/>
  </path>

  <path name="speaker-mic">
    <ctl name="Headset Mic Switch" value="0"/>
    <ctl name="IF1 ADC1 Swap Mux" value="L/R"/>
    <ctl name="Sto1 ADC MIXL ADC1 Switch" value="0"/>
    <ctl name="Sto1 ADC MIXR ADC1 Switch" value="0"/>
    <ctl name="Sto1 ADC MIXL ADC2 Switch" value="1"/>
    <ctl name="Sto1 ADC MIXR ADC2 Switch" value="1"/>
    <ctl name="Internal Mic 1 Switch" value="1"/>
  </path>

  <path name="headset-mic">
    <ctl name="Internal Mic 1 Switch" value="0"/>
    <ctl name="IF1 ADC1 Swap Mux" value="L/L"/>
    <ctl name="Sto1 ADC MIXL ADC2 Switch" value="0"/>
    <ctl name="Sto1 ADC MIXR ADC2 Switch" value="0"/>
    <ctl name="Sto1 ADC MIXL ADC1 Switch" value="1"/>
    <ctl name="Sto1 ADC MIXR ADC1 Switch" value="1"/>
    <ctl name="Headset Mic Switch" value="1"/>
  </path>

</mixer>
